{
  "name": "@bvm-cli/core",
  "version": "1.2.0",
  "description": "The native version manager for Bun. Cross-platform, shell-agnostic, and zero-dependency.",
  "main": "src/index.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npx bun run src/index.ts",
    "build": "bun build src/index.ts --target=bun --outfile dist/index.js --minify",
    "test": "npx bun test test/*.ts",
    "bvm": "npx bun run src/index.ts",
    "bvm:sandbox": "mkdir -p \"$PWD/.sandbox-home\" && HOME=\"$PWD/.sandbox-home\" npx bun run src/index.ts",
    "release": "bun run scripts/release.ts",
    "sync-runtime": "bun run scripts/sync-runtime.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bvm-cli/bvm.git"
  },
  "keywords": [
    "bun",
    "version-manager",
    "cli",
    "bvm"
  ],
  "files": [
    "dist/index.js",
    "README.md"
  ],
  "author": "bvm-cli",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/node": "^24.10.2",
    "bun": "^1.3.4",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
